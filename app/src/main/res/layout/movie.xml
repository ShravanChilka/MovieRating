<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    >

    <ImageView
        android:id="@+id/poster_1"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:alpha="0.35"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/poster" />

    <ImageView
        android:id="@+id/light"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/poster_1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/bg"
        />

    <TextView
        android:id="@+id/title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/yantramanav_bold"
        android:text="Avengers Endgame"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/light"

        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="@+id/title_1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/title_1"
        app:srcCompat="@drawable/heart" />

    <TextView
        android:id="@+id/likes_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(3400)"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/yantramanav_medium"
        android:textColor="@color/font_dark"
        app:layout_constraintTop_toTopOf="@id/rating_1"
        app:layout_constraintBottom_toBottomOf="@id/rating_1"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/rating_1"
        />

    <TextView
        android:id="@+id/rating_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/yantramanav_bold"
        android:text="6.8"
        android:textColor="@color/font_dark"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/heart"
        app:layout_constraintLeft_toRightOf="@id/heart"
        app:layout_constraintTop_toTopOf="@id/heart" />

    <TextView
        android:id="@+id/overview_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yantramanav_regular"
        android:text="A reclusive romance novelist was sure nothing could be worse than getting stuck on a book tour with her cover model until a kidnapping attempt sweeps them both into a cutthroat jungle adventure, proving life can be so much stranger, and more romantic, than any of her paperback fictions."
        android:textColor="@color/font_dark"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heart" />



</androidx.constraintlayout.widget.ConstraintLayout>